<h1><%=@letters%></h1>

<form action="/score" method="post" data-turbo="false">
  <input type="text" name="attempt" placeholder="Proposition?">
  <input type="submit">
  <input id="token" name="letters" type="hidden" value="<%= @letters.join %>" />
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>
